<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<import type="android.view.View" />
		<variable
			name="viewModel"
			type="mraqs.water.ui.volume.VolumeViewModel"
			/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="5dp"
		tools:context=".ui.volume.VolumeFragment"
		>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cvSmallGlass"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:backgroundTint="@color/white"
			android:onClick="@{() -> viewModel.onSmallGlassClick()}"
			app:cardCornerRadius="10dp"
			app:layout_constraintTop_toTopOf="parent"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:background="@color/white"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="70dp"
					android:layout_marginStart="10dp"
					android:layout_weight="5"
					android:gravity="center_vertical"
					android:text="Small glass"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="10dp"
					android:layout_weight="2"
					android:gravity="center_vertical|end"
					android:text="100 ml"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
		<com.google.android.gms.ads.AdView
			xmlns:ads="http://schemas.android.com/apk/res-auto"
			android:id="@+id/adView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			ads:adSize="LARGE_BANNER"
			ads:adUnitId="@string/admob_banner_id"
			ads:layout_constraintTop_toBottomOf="@id/cvSmallGlass"
			ads:layout_constraintBottom_toTopOf="@id/cvCup"
			ads:layout_constraintEnd_toEndOf="parent"
			ads:layout_constraintStart_toStartOf="parent"
			/>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cvCup"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:backgroundTint="@color/white"
			android:onClick="@{() -> viewModel.onCupClick()}"
			app:cardCornerRadius="10dp"
			app:layout_constraintTop_toBottomOf="@id/adView"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:background="@color/white"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="70dp"
					android:layout_marginStart="10dp"
					android:layout_weight="5"
					android:gravity="center_vertical"
					android:text="Cup"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="10dp"
					android:layout_weight="2"
					android:gravity="center_vertical|end"
					android:text="250 ml"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cvGlass"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:backgroundTint="@color/white"
			android:onClick="@{() -> viewModel.onGlassClick()}"
			app:cardCornerRadius="10dp"
			app:layout_constraintTop_toBottomOf="@id/cvCup"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:background="@color/white"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="70dp"
					android:layout_marginStart="10dp"
					android:layout_weight="5"
					android:gravity="center_vertical"
					android:text="Glass"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="10dp"
					android:layout_weight="2"
					android:gravity="center_vertical|end"
					android:text="300 ml"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cvSmallBottle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:backgroundTint="@color/white"
			android:onClick="@{() -> viewModel.onSmallBottleClick()}"
			app:cardCornerRadius="10dp"
			app:layout_constraintTop_toBottomOf="@id/cvGlass"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:background="@color/white"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="70dp"
					android:layout_marginStart="10dp"
					android:layout_weight="5"
					android:gravity="center_vertical"
					android:text="Small Bottle"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="10dp"
					android:layout_weight="2"
					android:gravity="center_vertical|end"
					android:text="500 ml"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
		<androidx.cardview.widget.CardView
			android:id="@+id/cvBottle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:backgroundTint="@color/white"
			android:onClick="@{() -> viewModel.onBottleClick()}"
			app:cardCornerRadius="10dp"
			app:layout_constraintTop_toBottomOf="@id/cvSmallBottle"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginEnd="10dp"
				android:layout_marginStart="10dp"
				android:background="@color/white"
				>
				<TextView
					android:layout_width="0dp"
					android:layout_height="70dp"
					android:layout_marginStart="10dp"
					android:layout_weight="5"
					android:gravity="center_vertical"
					android:text="Bottle"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginEnd="10dp"
					android:layout_weight="3"
					android:gravity="center_vertical|end"
					android:text="1000 ml"
					android:textColor="@color/black"
					android:textSize="20sp"
					android:textStyle="bold"
					/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
		
		<com.google.android.material.button.MaterialButton
			android:id="@+id/btnNext"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:onClick="@{() -> viewModel.onSaveClick()}"
			android:text="@string/save_button"
			android:textAllCaps="false"
			android:textSize="18sp"
			app:backgroundTint="@color/blue"
			app:cornerRadius="100dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>